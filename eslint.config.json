{
  "root": true,
  "env": { 
    "browser": true, 
    "es2020": true 
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime",
    "plugin:react-hooks/recommended"
  ],
  "ignorePatterns": [
    "dist", 
    ".eslintrc.json"
  ],
  "parserOptions": { 
    "ecmaVersion": "latest", 
    "sourceType": "module" 
  },
  "settings": { 
    "react": { 
      "version": "19.0" 
    } 
  },
  "plugins": [
    "react-refresh"
  ],
  "rules": {
    "react-refresh/only-export-components": [
      "warn",
      { "allowConstantExport": true }
    ],
    "react/prop-types": "off",
    "no-unused-vars": "warn"
  }
}
